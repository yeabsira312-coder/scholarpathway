<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <h2>Unsubscribe from Our Newsletter</h2>
      <p class="text-muted mb-4">We're sorry to see you go! You can unsubscribe from our newsletter at any time.</p>
      
      <div class="card">
        <div class="card-body">
          <form id="unsubscribe-form">
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn btn-secondary">Unsubscribe</button>
          </form>
          
          <div id="unsubscribe-message" class="mt-3 d-none"></div>
        </div>
      </div>
      
      <p class="text-muted mt-4">
        <small>If you change your mind, you can always <a href="/contact">contact us</a> to resubscribe.</small>
      </p>
    </div>
  </div>
</div>

<script>
document.getElementById('unsubscribe-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const messageDiv = document.getElementById('unsubscribe-message');
  messageDiv.className = 'mt-3 alert alert-success';
  messageDiv.textContent = 'You have been unsubscribed successfully. Thank you!';
  this.style.display = 'none';
});
</script>
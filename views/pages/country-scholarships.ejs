<section class="container py-5">
  <h1 class="mb-4"><%= (typeof country !== 'undefined' && country ? country.name : 'Country') %> Scholarships</h1>

  <div class="row">
    <div class="col-lg-9">
      <div class="row">
        <% if (typeof scholarships !== 'undefined' && scholarships && scholarships.length) { %>
          <% scholarships.forEach(s => { %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">
                    <a class="text-decoration-none" href="/scholarships/<%= s.slug %>"><%= s.title %></a>
                  </h5>
                  <p class="text-muted"><%= s.summary %></p>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm p-4 text-center">
              <h4 class="mb-2">No scholarships listed yet for <%= (country && country.name) || 'this country' %>.</h4>
              <p class="text-muted mb-3">We're working to add more opportunities. You can suggest a scholarship via our <a href="/contact">contact form</a> or browse global scholarships <a href="/scholarships">here</a>.</p>
              <a href="/scholarships" class="btn btn-primary">Browse all scholarships</a>
            </div>
          </div>
        <% } %>
      </div>

      <% if (typeof pagination !== 'undefined' && pagination && pagination.totalPages > 1) { %>
        <nav class="mt-4">
          <ul class="pagination">
            <% if (pagination.hasPrev) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= pagination.currentPage - 1 %>">Previous</a></li>
            <% } %>
            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
              <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (pagination.hasNext) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= pagination.currentPage + 1 %>">Next</a></li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>
    <div class="col-lg-3">
      <div class="card"><div class="card-body">More in <strong><%= (country && country.name) || 'this country' %></strong></div></div>
    </div>
  </div>
</section>

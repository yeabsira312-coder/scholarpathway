<section class="container py-5">
  <h1 class="mb-4">Countries</h1>
  <div class="row g-3">
    <% if (typeof countries !== 'undefined' && countries && countries.length) { %>
      <% countries.forEach(c => { %>
        <div class="col-md-3">
          <a class="card card-body text-decoration-none h-100 d-flex flex-column justify-content-between" href="/countries/<%= c.code.toLowerCase() %>">
            <div>
              <div class="d-flex align-items-center justify-content-between mb-2">
                <strong><%= c.name %></strong>
                <span class="badge bg-light text-muted"><%= c.flag || 'ðŸŒ' %></span>
              </div>
              <small class="text-muted"><%= (c.count || 0) %> scholarships</small>
            </div>
            <div class="mt-3">
              <% if ((c.count || 0) === 0) { %>
                <small class="text-muted">No scholarships yet â€” check back soon or suggest one via <a href="/contact">contact</a>.</small>
              <% } else { %>
                <span class="btn btn-sm btn-outline-primary">Explore</span>
              <% } %>
            </div>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No countries available.</p>
    <% } %>
  </div>
</section>

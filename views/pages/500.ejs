<% layout('layouts/layout') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <div class="py-5">
        <!-- 500 Icon -->
        <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
        
        <!-- Error Message -->
        <h1 class="display-4 text-warning">500</h1>
        <h2 class="h4 mb-3">Server Error</h2>
        <p class="lead text-muted mb-4">
          Something went wrong on our end. Our team has been notified and is working to fix this issue.
        </p>
        
        <!-- What to do -->
        <div class="mb-4">
          <p class="text-muted">What you can do:</p>
          <ul class="list-unstyled text-start">
            <li class="mb-2"><i class="fas fa-refresh me-2 text-muted"></i>Try refreshing the page</li>
            <li class="mb-2"><i class="fas fa-clock me-2 text-muted"></i>Wait a few moments and try again</li>
            <li class="mb-2"><i class="fas fa-home me-2 text-muted"></i>Go back to the homepage</li>
            <li class="mb-2"><i class="fas fa-envelope me-2 text-muted"></i>Contact us if the problem persists</li>
          </ul>
        </div>
        
        <!-- Navigation Links -->
        <div class="row mb-4">
          <div class="col-md-4 mb-3">
            <button onclick="location.reload()" class="btn btn-outline-warning w-100">
              <i class="fas fa-refresh me-2"></i>Try Again
            </button>
          </div>
          <div class="col-md-4 mb-3">
            <a href="/" class="btn btn-outline-primary w-100">
              <i class="fas fa-home me-2"></i>Go Home
            </a>
          </div>
          <div class="col-md-4 mb-3">
            <a href="/contact" class="btn btn-primary w-100">
              <i class="fas fa-envelope me-2"></i>Contact Us
            </a>
          </div>
        </div>
        
        <!-- Error ID (if available) -->
        <div class="text-muted">
          <small>
            Error occurred at: <%= new Date().toISOString() %><br>
            If you need support, please mention this timestamp.
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
<% layout('layouts/layout') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <div class="py-5">
        <!-- 404 Icon -->
        <i class="fas fa-search fa-5x text-muted mb-4"></i>
        
        <!-- Error Message -->
        <h1 class="display-4 text-brand">404</h1>
        <h2 class="h4 mb-3">Page Not Found</h2>
        <p class="lead text-muted mb-4">
          The scholarship or page you're looking for doesn't exist or may have been moved.
        </p>
        
        <!-- Search Suggestion -->
        <div class="mb-4">
          <p class="text-muted">Try searching for what you need:</p>
          <form action="/scholarships" method="GET" class="d-flex gap-2 justify-content-center">
            <input type="text" name="q" class="form-control" style="max-width: 300px;" placeholder="Search scholarships..." autofocus>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
        
        <!-- Navigation Links -->
        <div class="row mb-4">
          <div class="col-md-6 mb-3">
            <a href="/" class="btn btn-outline-primary w-100">
              <i class="fas fa-home me-2"></i>Go Home
            </a>
          </div>
          <div class="col-md-6 mb-3">
            <a href="/scholarships" class="btn btn-primary w-100">
              <i class="fas fa-graduation-cap me-2"></i>Browse Scholarships
            </a>
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="text-muted">
          <small>Quick links:</small><br>
          <a href="/tips" class="text-decoration-none me-3">Study Tips</a>
          <a href="/countries" class="text-decoration-none me-3">Countries</a>
          <a href="/about" class="text-decoration-none me-3">About Us</a>
          <a href="/contact" class="text-decoration-none">Contact</a>
        </div>
      </div>
    </div>
  </div>
</div>
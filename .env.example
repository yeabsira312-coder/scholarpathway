# ScholarPathway Environment Variables
# Copy this file to .env and fill in your values

# Required: Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: Site Configuration
SITE_NAME=ScholarPathway
SITE_URL=https://scholarpathway.glitch.me
NODE_ENV=production

# Optional: Security
SESSION_SECRET=your_random_session_secret_here

# Optional: Analytics & Ads
GA_MEASUREMENT_ID=
ADSENSE_CLIENT=

# External Links (if you want to redirect policy pages to external sites)
# If these are not set, the site will show the built-in policy pages
HELP_URL=
PRIVACY_URL=
TERMS_URL=

# For Render deployment, set these in your Render dashboard
# Environment variables section, not in this file